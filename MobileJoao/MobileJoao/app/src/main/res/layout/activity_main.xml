<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <TextView
        android:text=""

        android:padding="20dp"
        android:id="@+id/caixaTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:paddingBottom="10dp"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="4"
        android:layout_gravity="center">

        <Button
            android:id="@+id/botao1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            ></Button>

        <Button
            android:id="@+id/botao2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"></Button>

        <Button
            android:id="@+id/botao3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"></Button>

        <Button
            android:id="@+id/botaoSoma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"></Button>

        <Button
            android:id="@+id/botao4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"></Button>

        <Button
            android:id="@+id/botao5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"></Button>

        <Button
            android:id="@+id/botao6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"></Button>

        <Button
            android:id="@+id/botaoSubtrai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"></Button>

        <Button
            android:id="@+id/botao7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"></Button>

        <Button
            android:id="@+id/botao8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"></Button>

        <Button
            android:id="@+id/botao9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"></Button>

        <Button
            android:id="@+id/botaoMultipla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"></Button>

        <Button
            android:id="@+id/botaoLimpa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"></Button>

        <Button
            android:id="@+id/botao0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"></Button>

        <Button
            android:id="@+id/botaoIgual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="></Button>

        <Button
            android:id="@+id/botaoDivide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"></Button>

    </GridLayout>
</LinearLayout>